@model FoodEx.Models.CartViewModel

@{
    ViewData["Title"] = "My Cart";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-bag"></i> My Cart</h2>

    @if (Model == null || !Model.Items.Any())
    {
        <div class="alert alert-info">Your cart is empty.</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table table-borderless align-middle">
                    <thead class="border-bottom">
                        <tr>
                            <th>Item</th>
                            <th>Each</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="align-middle border-bottom">
                                <td>
                                    <div class="d-flex align-items-center">
                                        
                                        <div>
                                            <strong>@item.FoodName</strong>
                                        </div>
                                    </div>
                                </td>
                                <td class="fw-bold">@item.Price лв</td>
                                <td>@item.Quantity</td>
                                <td class="fw-bold">@item.Total</td>
                                <td>
                                    <form asp-action="RemoveFromCart" asp-route-cartItemId="@item.CartItemId" method="post">
                                        <button class="btn btn-sm btn-outline-danger">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p class="text-muted">@Model.Items.Count item(s)</p>
            </div>

            <div class="col-md-4">
                <div class="border rounded p-4 bg-light">
                    <h5>Summary</h5>
                    <div class="d-flex justify-content-between border-bottom py-2">
                        <span>Subtotal</span>
                        <span>@Model.TotalPrice лв</span>
                    </div>
                    <div class="d-flex justify-content-between fw-bold py-2">
                        <span>Total</span>
                        <span>@Model.TotalPrice лв</span>
                    </div>

                    <form asp-action="Checkout" method="post">
                        <button class="btn btn-warning w-100 mt-3 fw-bold">Checkout</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
