@model FoodViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg p-4 text-center">
                <img src="@Model.ImageUrl" class="card-img-top" style="object-fit: cover; height: 400px;">
                <h3 class="fw-bold">@Model.Name</h3>
                <h5 class="text-muted">от @Model.RestaurantName</h5>

                <h4 class="text-success mt-3 mb-4">@Model.Price.ToString("C")</h4>

                <p class="text-muted px-3">@Model.Description</p>

                <div class="d-flex justify-content-center align-items-center mt-4 gap-3">
                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-foodId="@Model.FoodId" method="post">
                        <button type="submit" class="btn btn-success btn-lg">
                            Добавете 1 за @Model.Price.ToString("C")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
