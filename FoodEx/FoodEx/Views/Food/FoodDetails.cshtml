@model FoodViewModel

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <h5 class="text-muted mb-3">from @Model.RestaurantName</h5>

            <p class="card-text">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <span class="h5 mb-0">Price: @Model.Price.ToString("C")</span>

                <form asp-controller="Food" asp-action="OrderNow" method="post" class="mb-0">
                    <input type="hidden" name="id" value="@Model.FoodId" />
                    <button type="submit" class="btn btn-success">Order Now</button>
                </form>
            </div>
        </div>
    </div>
</div>
