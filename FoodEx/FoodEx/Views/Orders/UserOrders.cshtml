@model IEnumerable<FoodEx.Data.Entity.Order>
@using FoodEx.Data
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <div class="row">

        <div class="col-md-9">
            <h3 class="mb-4">My Orders</h3>

            @foreach (var order in Model)
            {
                <div class="card mb-3 shadow-sm border-0 rounded">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Payment #@order.OrderId</div>
                            <div class="text-muted small">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</div>
                            <div class="fw-bold text-danger mt-1">@order.Status.ToString()</div>
                        </div>

                        <div class="d-flex align-items-center">
                            <div>
                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="fw-bold">@item.Food.Name</div>
                                    <div class="text-muted">@item.Quantity x @item.UnitPrice.ToString("C")</div>
                                }
                            </div>
                        </div>

                        <div class="text-end">
                            <div class="fw-bold fs-5">@order.TotalPrice.ToString("C")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
