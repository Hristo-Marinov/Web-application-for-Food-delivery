@model IEnumerable<FoodEx.Entity.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Restaurant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.Status</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>@order.Restaurant?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
