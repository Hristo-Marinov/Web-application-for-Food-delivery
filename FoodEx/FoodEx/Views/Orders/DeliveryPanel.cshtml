@model FoodEx.Models.DeliveryPanelViewModel

@{
    ViewData["Title"] = "Delivery Panel";
}

<!-- Leaflet CSS & JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div class="container mt-4">
    <h2 class="mb-4">Delivery Dashboard</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Available Orders</h4>
            @if (Model.AvailableOrders.Any())
            {
                <ul class="list-group">
                    @foreach (var order in Model.AvailableOrders)
                    {
                        var mapId = "map-available-" + order.OrderId;
                        <li class="list-group-item">
                            <div>
                                <strong>Order #@order.OrderId</strong><br />
                                <small><strong>Street:</strong> @order.DeliveryAddress?.Street</small><br />
                                @foreach (var item in order.OrderItems)
                                {
                                    <div>@item.Food.Name x @item.Quantity</div>
                                }

                                <div id="@mapId" style="height: 200px;" class="my-2 rounded border"></div>

                                <form asp-action="ClaimOrder" method="post">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <button type="submit" class="btn btn-primary btn-sm">Claim</button>
                                </form>
                            </div>
                        </li>
                        <script>
                            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=@order.DeliveryAddress?.Street`)
                                .then(res => res.json())
                                .then(data => {
                                    if (data.length > 0) {
                                        const map = L.map('@mapId').setView([data[0].lat, data[0].lon], 15);
                                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                            attribution: '© OpenStreetMap contributors'
                                        }).addTo(map);
                                        L.marker([data[0].lat, data[0].lon]).addTo(map)
                                            .bindPopup('@order.DeliveryAddress?.Street').openPopup();
                                    }
                                });
                        </script>
                    }
                </ul>
            }
            else
            {
                <p>No available orders.</p>
            }
        </div>

        <div class="col-md-6">
            <h4>My Orders</h4>
            @if (Model.MyOrders.Any())
            {
                <ul class="list-group">
                    @foreach (var order in Model.MyOrders)
                    {
                        var mapId = "map-my-" + order.OrderId;
                        <li class="list-group-item">
                            <div>
                                <strong>Order #@order.OrderId</strong> - Status: @order.Status<br />
                                <small><strong>Street:</strong> @order.DeliveryAddress?.Street</small><br />
                                @foreach (var item in order.OrderItems)
                                {
                                    <div>@item.Food.Name x @item.Quantity</div>
                                }

                                <div id="@mapId" style="height: 200px;" class="my-2 rounded border"></div>

                                <form asp-action="UpdateOrderStatusByDelivery" method="post" class="mt-2 d-flex gap-2 align-items-center">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <select name="status" class="form-select form-select-sm w-auto">
                                        <option value="OutForDelivery">Out For Delivery</option>
                                        <option value="Delivered">Delivered</option>
                                    </select>
                                    <button type="submit" class="btn btn-success btn-sm">Update</button>
                                </form>
                            </div>
                        </li>
                        <script>
                            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=@order.DeliveryAddress?.Street`)
                                .then(res => res.json())
                                .then(data => {
                                    if (data.length > 0) {
                                        const map = L.map('@mapId').setView([data[0].lat, data[0].lon], 15);
                                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                            attribution: '© OpenStreetMap contributors'
                                        }).addTo(map);
                                        L.marker([data[0].lat, data[0].lon]).addTo(map)
                                            .bindPopup('@order.DeliveryAddress?.Street').openPopup();
                                    }
                                });
                        </script>
                    }
                </ul>
            }
            else
            {
                <p>You have no assigned orders.</p>
            }
        </div>
    </div>
</div>
