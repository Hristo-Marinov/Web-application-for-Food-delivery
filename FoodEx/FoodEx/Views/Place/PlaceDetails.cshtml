@model dynamic

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <h2 class="text-center">@Model.Name</h2>
    <p class="text-center text-muted">@Model.Location</p>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        @foreach (var food in Model.Foods)
        {
            <div class="col">
                <div class="card h-100 shadow-sm food-card" style="transition: all 0.3s ease;">
                    <img src="@food.ImageUrl" class="card-img-top" alt="@food.Name" style="object-fit: cover; height: 200px;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@food.Name</h5>
                        <p class="card-text text-muted">@food.Price.ToString("C")</p>
                        <a asp-controller="Food" asp-action="FoodDetails" asp-route-id="@food.FoodId" class="btn btn-outline-primary mt-2">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

