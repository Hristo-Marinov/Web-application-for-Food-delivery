@model IEnumerable<FoodEx.Entity.Restaurant>

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <section class="hero-section text-center py-5 bg-light">
        <div class="container">
            <h1>The Best Restaurants in Your Home</h1>
            <p>Easy online food ordering from top-rated restaurants in your area.</p>
            <a href="@Url.Action("Place", "Places")" class="btn btn-primary btn-lg">View Restaurants</a>
        </div>
    </section>
</body>
</html>