@model FoodEx.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var googleLoginUrl = Url.Action("ExternalLogin", "Account", new { provider = "Google", returnUrl = "/" });
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-container">
    <div class="auth-form login">
        <h2>Sign in</h2>

        @await Html.PartialAsync("_ValidationSummary")

        <form asp-action="Login" method="post">
            <div class="input-group">
                <input asp-for="Email" type="email" placeholder="Email" />
            </div>
            <div class="input-group">
                <input asp-for="Password" type="password" placeholder="Password" />
            </div>
            <div class="form-footer">
                <a href="#">Forgot your password?</a>
                <button type="submit" class="btn-auth">Sign In</button>
            </div>
            <div class="text-center mt-3">
                <a class="btn btn-outline-dark" href="@googleLoginUrl">
                    <i class="bi bi-google me-1"></i> Sign in with Google
                </a>
            </div>
        </form>
    </div>
    <div class="auth-overlay">
        <h2>Hello, Friend!</h2>
        <p>Enter your personal details and start your journey with us</p>
        <a class="btn-auth-outline" asp-action="Register">Sign Up</a>
    </div>
</div>
